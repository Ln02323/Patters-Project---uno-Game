package uno;
/*Concrete Decorators:
Implement concrete decorators by extending the decorator class and adding specific functionalities.
java*/

public class PlayerWithScoreDecorator extends PlayerDecorator {
    private int score;

    public PlayerWithScoreDecorator(Player decoratedPlayer, int score) {
        super(decoratedPlayer);
        this.score = score;
    }

    public int getScore() {
        return score;
    }
}
